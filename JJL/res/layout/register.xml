<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false" 
	android:focusableInTouchMode="true"  >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="114dp"
        android:text="用户名设置"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_user"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_password"
        android:layout_alignBottom="@+id/et_password"
        android:layout_alignLeft="@+id/textView1"
        android:text="密码设置"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_user"
        android:layout_below="@+id/et_user"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:password="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_password_checked"
        android:layout_alignBottom="@+id/et_password_checked"
        android:layout_alignLeft="@+id/textView2"
        android:text="密码确认"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_password_checked"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_password"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:password="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/et_password_checked"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="57dp"
        android:text="注册" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_register"
        android:layout_alignBottom="@+id/btn_register"
        android:layout_alignRight="@+id/et_password_checked"
        android:text="取消" />

</RelativeLayout>
